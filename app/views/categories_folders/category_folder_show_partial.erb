<!-- Controls flash messages -->
<%= erb(:"partials/flash_partial") %>

<!-- Displays the Page Title -->
<div class="title_heading rounded">
  <h3> <%= object_one.name.capitalize %> <%= object_string %> </h3>
</div>
<br>
<br>

<!-- Lists the items in the folder/category (alphabetical Order) -->
<!-- Displays an item url + edit and delete buttons -->

<div class="folder_container">

  <%= erb(:"partials/accordion_top_partial", :locals => {:collapse_num => "collapseOne", :heading_num => "headingOne"})%>
    <%= object_one.name %> : Contains <%= object_one.items.size %> item(s)</a>
  <%= erb(:"partials/accordion_middle_partial", :locals => {:collapse_num => "collapseOne", :heading_num => "headingOne"})%>
    <% object_two.each do |item| %>
      <%= erb(:"partials/list_item_partial", :locals => {
        :item => item, :delete_path => "/"+current_user.slug+fs_object_string+"/"+object_one.slug+"/"+object_one.id.to_s+"/items/"+item.slug+"/"+item.id.to_s+"/delete",
        })%>
    <% end %>
  <%= erb(:"partials/accordion_bottom_partial")%>
</div>


<br>

<!-- EDIT / CREATE ITEM BUTTON -->
<%= erb(:"partials/button_edit_partial", :locals => {
  :object_string => object_string, :edit_path => "/"+current_user.slug+fs_object_string+"/"+object_one.slug+"/edit",
  :button_label => object_string + " or Add item"
  })%>
<br>

<!-- DELETE BUTTON -->
<%= erb(:"partials/button_delete_partial", :locals => {
  :object_string => object_string, :delete_path => "/"+current_user.slug+fs_object_string+"/"+object_one.slug+"/delete"
  })%>


<br>
<br>

<!-- Display a Back button. It takes the user to the previously visited page -->
<a href="javascript:history.back()" class="badge-pill badge-secondary">Go Back</a>
